<% unless current_user == user %>
  <% if current_user.invitation?(user) %>
    <%= form_with(model: current_user.invitations.find_by(user_id: user.id), method: :delete) do |f| %>
      <%= hidden_field_tag :user_id, user.id %>
      <%= f.submit 'Unfollow', class: 'btn btn-danger w-100' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.invitations.build do |f| %>
      <%= hidden_field_tag :user_id, user.id %>
      <%= f.submit '招待する', class: 'btn btn-primary w-100' %>
    <% end %>
  <% end %>
<% end %>