<% if groups.any? %>
  <ul class="list-unstyled">
    <% groups.each do |group| %>
      <li class="mb-3 d-flex">
        <div>
          <div>
            <%= group.name %>
          </div>
          <div>
            <p><%= link_to 'グループ詳細', group_path(group), class: "text-decoration-none" %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>