<% if current_user.favorite?(place) %>
      <%= form_with(model: current_user.favorites.find_by(place_id: place.id), method: :delete) do |f| %>
      <%= hidden_field_tag :place_id, place.id%>
      <%= f.submit 'お気に入り解除', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :place_id, place.id %>
      <%= f.submit 'お気に入りに追加', class: 'btn btn-primary btn-sm' %>
    <% end %>
  <% end %>